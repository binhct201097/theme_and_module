<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- catalog_product_view.xml -->
        <!-- <referenceBlock name="reviews.tab" remove="true" /> -->
        <!-- <referenceBlock name="product.info.review" remove="true"/> -->


        <move element="top.search" destination="div.menu.search" after="-" />
        <move element="form.subscribe" destination="follow" after="-"/>
        <move element="navigation.sections" destination="div.menu.search" />
        <move element="header" destination="header-wrapper" before="minicart"/>

        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="header" remove="true" />
        <referenceBlock name="copyright" remove="true"/>

        <referenceContainer name="page.top">
            <container name="div.menu.search" htmlTag="div" htmlClass="menu-search d-flex justify-content-between m-3" after="-" />
        </referenceContainer>
        <referenceContainer name="div.menu.search">
            <block class="Magento\Cms\Block\Block" name="nav">
                <arguments>
                    <argument name="block_id" xsi:type="string">nav</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>