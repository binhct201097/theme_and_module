<?xml version="1.0"?>
<page layout="1column"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_src" xsi:type="string">images/logo.jpg</argument>
                <argument name="logo_width" xsi:type="number">230</argument>
                <argument name="logo_height" xsi:type="number">80</argument>
                <argument name="logo_alt" xsi:type="string">Logo name</argument>
            </arguments>
        </referenceBlock>

        <!-- move -->
        <move element="top.search" destination="catalog.topnav" after="-" />
        <move element="header" destination="header-wrapper" before="minicart"/>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Cms\Block\Block" name="content-mobile" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">content-mobile</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="help-lable">
                <arguments>
                    <argument name="block_id" xsi:type="string">help-lable</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>